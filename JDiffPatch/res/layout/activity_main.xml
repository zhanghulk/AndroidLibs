<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.diffpatch.MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/diff_file_text_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test text file Diff" />
            <Button
                android:id="@+id/diff_common_text_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test text List Diff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>